<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#74FFFFFF"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NOTU GİRİN"
        android:inputType="number"
        android:textAlignment="center"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="173dp"
        android:layout_height="43dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="484dp"
        android:onClick="sayigirin"
        android:text="Kontrol"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textCursorDrawable="@android:drawable/btn_default"
        android:textDirection="firstStrongRtl"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:shapeAppearance="@style/Widget.Support.CoordinatorLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>