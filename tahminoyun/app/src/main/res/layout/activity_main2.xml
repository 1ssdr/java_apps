<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/tahmintext"
        android:layout_width="267dp"
        android:layout_height="53dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="TAHMİNİNİZİ GİRİN"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/harftext" />

    <TextView
        android:id="@+id/harftext"
        android:layout_width="212dp"
        android:layout_height="37dp"
        android:layout_marginTop="68dp"
        android:text="- -"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="60dp"
        android:onClick="harfAl"
        android:text="Harf Al"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tahmintext" />

    <Button
        android:id="@+id/buttonet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="56dp"
        android:onClick="tahminEt"
        android:text="Tahmin Et"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tahmintext" />

    <Button
        android:id="@+id/te"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="228dp"
        android:onClick="geriDön"
        android:text="Geri Dön"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/buttonal"
        app:layout_constraintTop_toBottomOf="@+id/tahmintext" />

    <TextView
        android:id="@+id/skortext"
        android:layout_width="120dp"
        android:layout_height="31dp"
        android:text="SKOR"
        app:layout_constraintBottom_toTopOf="@+id/harftext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>