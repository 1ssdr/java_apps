<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ogrenci">

    <EditText
        android:id="@+id/sifreikitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="75dp"
        android:ems="10"
        android:hint="ŞİFRE"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciikitext" />

    <EditText
        android:id="@+id/kullaniciikitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:ems="10"
        android:hint="KULLANICI ADI"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/sifreikitext"
        app:layout_constraintStart_toStartOf="@+id/sifreikitext"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOgrenci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oturumu Kapat"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="653dp" />
</androidx.constraintlayout.widget.ConstraintLayout>