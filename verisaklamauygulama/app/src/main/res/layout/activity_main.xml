<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textkullanici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Kullanıcı Adı"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textsifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textkullanici"
        app:layout_constraintTop_toBottomOf="@+id/textkullanici" />

    <Button
        android:id="@+id/buttongiris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="71dp"
        android:onClick="giris"
        android:text="GİRİŞ YAP"
        app:layout_constraintBottom_toTopOf="@+id/textisim"
        app:layout_constraintEnd_toEndOf="@+id/textisim" />

    <Button
        android:id="@+id/buttonkayit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="3dp"
        android:onClick="kayıt"
        android:text="YENİ KAYIT OLUŞTUR"
        app:layout_constraintEnd_toEndOf="@+id/textsifreiki"
        app:layout_constraintTop_toBottomOf="@+id/textsifreiki" />

    <EditText
        android:id="@+id/textsifreiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textkullaniciiki"
        app:layout_constraintTop_toBottomOf="@+id/textkullaniciiki" />

    <EditText
        android:id="@+id/textkullaniciiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Kullanıcı Adı"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textsoyisim"
        app:layout_constraintTop_toBottomOf="@+id/textsoyisim" />

    <EditText
        android:id="@+id/textsoyisim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Soy İsim"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textisim"
        app:layout_constraintTop_toBottomOf="@+id/textisim" />

    <EditText
        android:id="@+id/textisim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="309dp"
        android:ems="10"
        android:hint="İsim"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>