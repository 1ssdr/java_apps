<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewc"
        app:layout_constraintEnd_toStartOf="@+id/imageViewc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewc"
        app:srcCompat="@drawable/bolme" />

    <ImageView
        android:id="@+id/imageViewcc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewt"
        app:layout_constraintEnd_toStartOf="@+id/imageViewt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewt"
        app:srcCompat="@drawable/carpma" />

    <ImageView
        android:id="@+id/imageViewc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewb"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cikartma" />

    <ImageView
        android:id="@+id/imageViewt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/buttoncc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewcc"
        app:layout_constraintTop_toBottomOf="@+id/imageViewc"
        app:srcCompat="@drawable/toplama" />

    <Button
        android:id="@+id/buttonc"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="20dp"
        android:onClick="cikarma"
        android:text="ÇIKARTMA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttont" />

    <Button
        android:id="@+id/buttont"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="11dp"
        android:onClick="toplama"
        android:text="TOPLAMA"
        app:layout_constraintBottom_toTopOf="@+id/buttonc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonb" />

    <Button
        android:id="@+id/buttonb"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="10dp"
        android:onClick="bolme"
        android:text="BÖLME"
        app:layout_constraintBottom_toTopOf="@+id/buttont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoncc" />

    <Button
        android:id="@+id/buttoncc"
        android:layout_width="405dp"
        android:layout_height="55dp"
        android:layout_marginBottom="11dp"
        android:onClick="carpma"
        android:text="ÇARPMA"
        app:layout_constraintBottom_toTopOf="@+id/buttonb"
        app:layout_constraintEnd_toStartOf="@+id/imageViewt"
        app:layout_constraintStart_toStartOf="@+id/imageViewt"
        app:layout_constraintTop_toBottomOf="@+id/imageViewt" />
</androidx.constraintlayout.widget.ConstraintLayout>