<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/skortext"
        android:layout_width="138dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="423dp"
        android:background="#9575CF"
        android:text="SKOR"
        android:textColor="#FAFAFA"
        android:textColorHint="#FDFDFD"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sorutext"
        android:layout_width="335dp"
        android:layout_height="70dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="93dp"
        android:background="#DC67BB49"
        android:backgroundTint="#7A58B6"
        android:hint="SORU"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#7F1B1B"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cevaptext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skortext" />

    <EditText
        android:id="@+id/cevaptext"
        android:layout_width="244dp"
        android:layout_height="46dp"
        android:layout_marginBottom="108dp"
        android:background="#60468F"
        android:backgroundTint="#8D62D6"
        android:ems="10"
        android:gravity="start|top"
        android:hint="CEVAP"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColorHighlight="#DA2663"
        android:textColorHint="#FDFDFD"
        android:textColorLink="#FBFBFB"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sorutext" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="266dp"
        android:onClick="Button"
        android:text="HESAPLA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cevaptext" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="179dp"
        android:onClick="baslangic"
        android:text="GERİDÖN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/skortext" />

</androidx.constraintlayout.widget.ConstraintLayout>