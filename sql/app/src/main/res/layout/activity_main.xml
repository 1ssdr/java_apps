<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/kullaniciadiText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="KULLANICI ADI"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/sifreText"
        app:layout_constraintEnd_toEndOf="@+id/sifreText"
        app:layout_constraintStart_toStartOf="@+id/sifreText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sifreText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="41dp"
        android:ems="10"
        android:hint="ŞİFRE"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciadiText" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:onClick="girişYap"
        android:text="Giriş Yap"
        app:layout_constraintBottom_toTopOf="@+id/kullaniciadi2Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifreText" />

    <EditText
        android:id="@+id/kullaniciadi2Text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="KULLANICI ADI"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/sifre2Text"
        app:layout_constraintEnd_toEndOf="@+id/sifre2Text"
        app:layout_constraintStart_toStartOf="@+id/sifre2Text"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <EditText
        android:id="@+id/sifre2Text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="ŞİFRE"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciadi2Text" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="273dp"
        android:onClick="kayıtOl"
        android:text="Kayıt Ol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifre2Text" />
</androidx.constraintlayout.widget.ConstraintLayout>